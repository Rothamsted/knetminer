<?xml version="1.0" encoding="UTF-8"?>
<sampleQueries>
	<query>
		<name>Example 1</name>
		<description>Find candidate genes in QTL</description>
    <term>"aphid resistance" OR "fungal disease resistance"</term>
		<withinRegion>true</withinRegion>
		<region>
			<chromosome>C9</chromosome>
			<start>44000000</start>
			<end>45000000</end>
			<label>First</label>
		</region>
		<region>
			<chromosome>C8</chromosome>
			<start>31000000</start>
			<end>33000000</end>
			<label>Second</label>
		</region>
	</query>	
	
	<query>
		<name>Example 2</name>
		<description>Genetic region + gene list analysis</description>
		<term>"resistance"</term>
		<withinRegion>true</withinRegion>
		<region>
			<chromosome>C6</chromosome>
			<start>10000000</start>
			<end>13000000</end>
			<label>First</label>
		</region>
		<region>
			<chromosome>C6</chromosome>
			<start>14000000</start>
			<end>15000000</end>
			<label>Second</label>
		</region>
		<mapGLWithoutRestriction>true</mapGLWithoutRestriction>
    <gene>Bo6g010640</gene>
    <gene>Bo6g051100</gene>
    <gene>Bo6g089250</gene>
		
	</query>
</sampleQueries>
